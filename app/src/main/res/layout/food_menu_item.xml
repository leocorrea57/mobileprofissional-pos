<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_order_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="52sp"
            android:layout_height="52sp"
            android:layout_marginVertical="8dp"
            android:contentDescription="@string/logotipo_restaurante"
            android:src="@drawable/ic_round_fastfood"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/light_gray" />

        <TextView
            android:id="@+id/text_nome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:textColor="@color/text_black"
            android:textSize="13sp"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@id/text_descricao"
            app:layout_constraintEnd_toStartOf="@id/button_edit"
            app:layout_constraintStart_toEndOf="@id/icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Nome do item" />

        <TextView
            android:id="@+id/text_descricao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/text_categoria"
            app:layout_constraintEnd_toEndOf="@id/text_nome"
            app:layout_constraintStart_toStartOf="@id/text_nome"
            app:layout_constraintTop_toBottomOf="@id/text_nome"
            tools:text="Descrição do item Descrição do item Descrição do item Descrição do item Descrição do item" />

        <TextView
            android:id="@+id/text_categoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/secondary_red"
            android:textSize="12sp"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:background="@drawable/category_text_background"
            android:backgroundTint="#0DE81F1D"
            app:layout_constraintBottom_toTopOf="@id/text_valor"
            app:layout_constraintStart_toStartOf="@id/text_descricao"
            app:layout_constraintTop_toBottomOf="@id/text_descricao"
            tools:text="Pizzas Salgadas" />

        <TextView
            android:id="@+id/text_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/text_descricao"
            app:layout_constraintTop_toBottomOf="@id/text_categoria"
            tools:text="R$ 10,00" />

        <ImageButton
            android:id="@+id/button_edit"
            android:layout_width="44dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_outline_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_delete"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/text_gray" />

        <ImageButton
            android:id="@+id/button_delete"
            android:layout_width="44dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_outline_delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/red_delete" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@id/layout_order_item" />
</androidx.constraintlayout.widget.ConstraintLayout>