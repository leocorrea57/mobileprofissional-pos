<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon_restaurante"
        android:layout_width="52sp"
        android:layout_height="52sp"
        android:contentDescription="@string/logotipo_restaurante"
        android:src="@drawable/restaurante"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/light_gray" />


    <TextView
        android:id="@+id/text_nome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8sp"
        android:textColor="@color/text_black"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@id/text_tipo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon_restaurante"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Restaurante Janta Boa" />

    <TextView
        android:id="@+id/text_tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_gray"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/text_taxa"
        app:layout_constraintStart_toStartOf="@id/text_nome"
        app:layout_constraintTop_toBottomOf="@id/text_nome"
        tools:text="Lanches" />

    <TextView
        android:id="@+id/text_taxa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_gray"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/text_tipo"
        app:layout_constraintTop_toBottomOf="@id/text_tipo"
        tools:text="R$ 10,00" />

</androidx.constraintlayout.widget.ConstraintLayout>